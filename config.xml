<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tootis.azkar" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="android-minSdkVersion" value="16" />
    <preference name="DisallowOverscroll" value="true" />
    <hook src="hooks/hookers.js" type="before_prepare" />
    <hook src="hooks/beforedep.js" type="before_deploy" />
    <name>Azkar</name>
    <description>
        Azkar App
    </description>
    <author email="mohammed.ahmed.anwer@gmail.com" href="mohamedanwer.wordpress.com">
        Mohamed Anwer
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/azkar36.png" />
        <icon density="mdpi" src="res/android/azkar48.png" />
        <icon density="hdpi" src="res/android/azkar72.png" />
        <icon density="xhdpi" src="res/android/azkar96.png" />
        <icon density="xxhdpi" src="res/android/azkar144.png" />
        <icon density="xxxhdpi" src="res/android/azkar192.png" />
    </platform>
    <platform name="ios">
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="*" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
